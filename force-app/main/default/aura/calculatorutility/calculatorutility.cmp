<aura:component >
    <aura:attribute name="input1" type="integer" access ="global"/>
    <aura:attribute name="input2" type="integer" access="global"/>
    <aura:attribute name="output" type="integer" access="global"/>
     <lightning:input type="number" value="{!v.input1}" label="Enter a number" required ="true" />
     <lightning:input type="number" value="{!v.input2}" label="Enter a number" required= "true" />
    This is ouput:-{!v.output}<br/>
    
    <lightning:button   variant= "brand" value= "Componet Methods" label="Add"  onclick="{!c.Add}" />
     <lightning:button  variant ="destructive" value= "Componet Methods" label="Subtract"  onclick="{!c.Subtract}" />
     <lightning:button  variant ="destructive-text" value= "Componet Methods" label="Multiply"  onclick="{!c.Multiply}" />
     <lightning:button  variant ="destructive" value= "Componet Methods" label="Divide"  onclick="{!c.Divide}" />
</aura:component>